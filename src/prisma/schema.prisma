generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  stage     Int      @default(0)
  createdAt DateTime @default(now())
  
  profile   Profile?
  tasks     Task[]

  shortlist University[] @relation("Shortlisted")
  locked    University[] @relation("Locked")
}

model Profile {
  id             String @id @default(uuid())
  userId         String @unique

  education      String
  major          String
  graduationYear Int
  targetDegree   String
  field          String
  countries      String[]
  budget         Int
  fundingType    String
  ieltsStatus    String
  greStatus      String
  sopStatus      String

  user User @relation(fields: [userId], references: [id])
}

model Task {
  id     String @id @default(uuid())
  title  String
  status String
  stage  Int

  userId String
  user   User @relation(fields: [userId], references: [id])
}

model University {
  id        String @id
  name      String
  country   String
  cost      Int
  ranking   Int

  usersShortlisted User[] @relation("Shortlisted")
  usersLocked      User[] @relation("Locked")
}
